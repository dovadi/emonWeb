- content_for :meta do
  %meta{ 'http-equiv'=>'refresh', :content=>'10' } 

%h1.title Listing Feeds

%table.table.table-bordered.table-striped
  %tr
    %th Name
    %th Updated at
    %th Value

  - @feeds.each do |feed|
    %tr
      %td= feed.name
      %td{:class => color_time_ago(feed.updated_at)}= time_ago_in_words(feed.updated_at, true)
      %td= feed.last_value
