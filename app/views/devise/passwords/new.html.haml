= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-stacked' }) do |f|
  = devise_error_messages!
  %fieldset
    %legend Forgot your password?
    %p
      = f.label :email
      = f.email_field :email
  %p= f.submit "Send me reset password instructions"
= render :partial => "devise/shared/links"
